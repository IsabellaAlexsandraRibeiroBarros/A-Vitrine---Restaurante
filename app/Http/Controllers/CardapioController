<?php
namespace App\Http\Controllers;
use Illuminate\Http\Request;
use App\Models\Cardapio;
class CardapioController extends Controller
{
    public function index()
    {
        $cardapios = Cardapio::with('pratos')->get();
        return view('cardapios.index', compact('cardapios'));
    }
    public function create()
    {
        return view('cardapios.create');
    }
    public function store(Request $request)
    {
        $request->validate(['nome' => 'required|string|max:255']);
        Cardapio::create($request->all());
        return redirect('/cardapios')->with('success', 'Cardápio criado!');
    }
    public function show($id)
    {
        $cardapio = Cardapio::with('pratos')->findOrFail($id);
        return view('cardapios.show', compact('cardapio'));
    }
    public function edit($id)
    {
        $cardapio = Cardapio::findOrFail($id);
        return view('cardapios.edit', compact('cardapio'));
    }
    public function update(Request $request, $id)
    {
        $cardapio = Cardapio::findOrFail($id);
        $cardapio->update($request->all());
        return redirect('/cardapios')->with('success', 'Cardápio atualizado!');
    }
    public function destroy($id)
    {
        Cardapio::findOrFail($id)->delete();
        return redirect('/cardapios')->with('success', 'Cardápio deletado!');
    }
}